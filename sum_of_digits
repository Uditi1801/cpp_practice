//sum of digits of a number
#include<iostream>
using namespace std;
int main(){
    int n, sum=0;
    cout<<"enter a number you want to find the sum of digits of: ";
    cin>>n;
    if(n<0){
        n=-n;
    }
    if(n==0){
        sum=0;
    }
    else{
        while(n>0){
            int digit= n%10;
            sum+=digit;
            n=n/10;
        }

    }
    cout<<"the sum of the digits of this number is:"<<sum<<endl;
    return 0;
}
